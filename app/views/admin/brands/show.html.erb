<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_brands_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_brand_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_brand_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.admin_brand.title", :default => t("activerecord.labels.title", :default => "Title")) %>:</b>
          <%= @brand.title %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_brand.body", :default => t("activerecord.labels.body", :default => "Body")) %>:</b>
          <%= @brand.body %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_brand.image_file_name", :default => t("activerecord.labels.image_file_name", :default => "Image file name")) %>:</b>
          <%= @brand.image_file_name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_brand.image_content_type", :default => t("activerecord.labels.image_content_type", :default => "Image content type")) %>:</b>
          <%= @brand.image_content_type %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_brand.image_file_size", :default => t("activerecord.labels.image_file_size", :default => "Image file size")) %>:</b>
          <%= @brand.image_file_size %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_brand.public", :default => t("activerecord.labels.public", :default => "Public")) %>:</b>
          <%= @brand.public %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_admin_brand_path(@brand), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", admin_brand_path(@brand), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>