<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_item_availabilities_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_item_availability_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_item_availability_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.admin_item_availability.item_id", :default => t("activerecord.labels.item_id", :default => "Item")) %>:</b>
          <%= @item_availability.item_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_item_availability.size", :default => t("activerecord.labels.size", :default => "Size")) %>:</b>
          <%= @item_availability.size %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_item_availability.quantity", :default => t("activerecord.labels.quantity", :default => "Quantity")) %>:</b>
          <%= @item_availability.quantity %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_admin_item_availability_path(@item, @item_availability), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", admin_item_availability_path(@item, @item_availability), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>