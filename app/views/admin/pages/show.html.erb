<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_pages_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_page_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_page_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.admin_page.title", :default => t("activerecord.labels.title", :default => "Title")) %>:</b>
          <%= @page.title %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_page.body", :default => t("activerecord.labels.body", :default => "Body")) %>:</b>
          <%= @page.body %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_page.position", :default => t("activerecord.labels.position", :default => "Position")) %>:</b>
          <%= @page.position %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_page.public", :default => t("activerecord.labels.public", :default => "Public")) %>:</b>
          <%= @page.public %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_admin_page_path(@page), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", admin_page_path(@page), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>