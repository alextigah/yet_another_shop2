<% content_for :head do -%>
	<script 
	  src="/javascripts/twitter-1.13.1.js"
	  type="text/javascript">
	</script>
	
	<script>
		$(function()
		{
			
			getTwitters('tweet', { 
			  id: 'shuttle_ua', 
			  count: 3, 
			  enableLinks: true, 
			  ignoreReplies: true, 
			  clearContents: true,
			  template: '<p class="date">%time%</p><p class="body">%text% <a href="http://twitter.com/%user_screen_name%/statuses/%id%/">&rarr;</a></p>'
			});	
	
		});
		</script>

<% end -%>

<div id="content">
	<%= render :partial => "shared/menu"%>
	<div id="top">
		<% if @sale %>
		<div class="p-text"><%= @sale.title %></div>
		<div class="popular left">
			<div class="p-pic"><a href="<%= @sale.link unless @sale.link.blank? %>"><img src="<%= @sale.image.url(:main) %>" width="563" height="425" alt="<%= @sale.title %>" border="0"></a></div>
		</div>
		<% end %>
		<div class="news left">
		<div class="twitter-bird"><img src="/i/twitter-logo.png"></div>
			<div id="tweet">

				<%# for message in @messages %>
					<p class="date"><%#= Date.parse(message.created_at).strftime("%d.%m.%y")%></p>
					<p class="body"><%#= message.text %></p>
				<%# end %>
			</div>
		</div>
		<br class="clearfix"/>
	</div>
	
	<div class="goods">
		<h2>Новинки</h2>
		<ul>
			<% for item in @items%>	
				<li>
				<% unless item.status.zero? %>
				<div class="plashka <%= Item::STATUS[item.status]%>">
				<div>
				<img src="/i/<%= Item::STATUS[item.status]%>_icon.png" alt="новинка"/>
				</div>
				</div>
				<% end %>
				<div style="height:200px;">
				<a href="<%= item.link %>"><img src="<%= item.image.url(:thumb) %>" alt=""  border="0"></a>
				</div>
				<div class="price hot" ><%= price_print(item.price) %> <span>грн.</span></div>	
				<div class="title"><a href="#"><%= item.title %></a></div>
				</li>

			<% end %>		

			<br class="clearfix"/>				
		</ul>
	</div>
</div>